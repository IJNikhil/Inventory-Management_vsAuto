{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017", "es2018", "es2019", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "../*": ["src/*"]
    },
    "types": ["node"] // REMOVE "nativewind/types"
  },
  "include": ["src"], // REMOVE "nativewind-env.d.ts"
  "exclude": ["node_modules", "android", "ios", "**/*.test.*"]
}
